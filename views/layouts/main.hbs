<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{{#if title}}{{title}} · {{/if}}Health Jam Clinic</title>

    {{!-- Pico.css (CDN) --}}
    <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@2.0.6/css/pico.min.css" />

    {{!-- Google Font --}}
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    {{!-- <link rel="stylesheet" href="/css/style.css" /> --}}
    <link rel="stylesheet" href="/css/00-settings.css" />
    <link rel="stylesheet" href="/css/10-base-layout.css" />
    <link rel="stylesheet" href="/css/20-nav.css" />
    <link rel="stylesheet" href="/css/30-components.css" />
    <link rel="stylesheet" href="/css/40-page-auth.css" />
    <link rel="stylesheet" href="/css/99-utilities.css" />
  </head>
  <body>
    {{> header }} 

    <main class="container">
      {{{body}}}
    </main>

    {{> footer }}  
    <div
      class="modal"
      id="confirm-modal"
      aria-hidden="true"
      data-modal="confirm"
    >
      <div class="modal__backdrop" data-close-modal="true"></div>
      <div
        class="modal__dialog"
        role="dialog"
        aria-modal="true"
        aria-labelledby="confirmModalTitle"
      >
        <button
          class="modal__close icon-button secondary"
          type="button"
          data-close-modal="true"
          aria-label="Close confirmation"
        >
          ✖️
        </button>
        <h3 id="confirmModalTitle" class="modal__title m0">Are you sure?</h3>
        <p class="modal__subtitle text-muted" data-confirm-message>
          This action cannot be undone.
        </p>
        <div class="modal__actions modal__full">
          <form method="POST" data-confirm-form>
            <button type="submit" class="danger" data-focus-default>Yes, delete</button>
          </form>
          <button
            type="button"
            class="secondary"
            data-close-modal="true"
          >
            Cancel
          </button>
        </div>
      </div>
    </div>
  </body>
</html>
