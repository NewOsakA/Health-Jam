<div class="modal" aria-hidden="true" data-modal="view-account">
  <div class="modal__backdrop" data-close-modal="true"></div>
  <div
    class="modal__dialog"
    role="dialog"
    aria-modal="true"
    aria-labelledby="viewAccountTitle"
  >
    <button
      class="modal__close icon-button secondary"
      type="button"
      data-close-modal="true"
      aria-label="Close account details"
    >
      ✖️
    </button>
    <h3 id="viewAccountTitle" class="modal__title m0">Account details</h3>
    <p class="modal__subtitle text-muted">
      View username, role, and creation date.
    </p>
    <div class="modal__form modal__form--static" data-view-account>
      <label>
        <span>Username</span>
        <input type="text" readonly data-account-field="username" />
      </label>
      <label>
        <span>Role</span>
        <input type="text" readonly data-account-field="role" />
      </label>
      <label class="modal__full">
        <span>Created</span>
        <input type="text" readonly data-account-field="created" />
      </label>
      <div class="modal__actions modal__full">
        <button
          type="button"
          class="secondary"
          data-close-modal="true"
          data-focus-default
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
