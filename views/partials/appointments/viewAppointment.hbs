<div class="modal" aria-hidden="true" data-modal="view-appointment">
  <div class="modal__backdrop" data-close-modal="true"></div>
  <div
    class="modal__dialog"
    role="dialog"
    aria-modal="true"
    aria-labelledby="viewAppointmentTitle"
  >
    <button
      class="modal__close icon-button secondary"
      type="button"
      data-close-modal="true"
      aria-label="Close appointment details"
    >
      ✖️
    </button>
    <h3 id="viewAppointmentTitle" class="modal__title m0">Appointment details</h3>
    <p class="modal__subtitle text-muted">
      View patient, doctor, and schedule information.
    </p>
    <div class="modal__form modal__form--static" data-view-appointment>
      <label>
        <span>Patient</span>
        <input type="text" readonly data-appointment-field="patient" />
      </label>
      <label>
        <span>Doctor</span>
        <input type="text" readonly data-appointment-field="doctor" />
      </label>
      <label class="modal__full">
        <span>Appointment date</span>
        <input type="text" readonly data-appointment-field="date" />
      </label>
      <div class="modal__actions modal__full">
        <button
          type="button"
          class="secondary"
          data-close-modal="true"
          data-focus-default
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
