<div class="modal" aria-hidden="true" data-modal="view-doctor">
  <div class="modal__backdrop" data-close-modal="true"></div>
  <div
    class="modal__dialog"
    role="dialog"
    aria-modal="true"
    aria-labelledby="viewDoctorTitle"
  >
    <button
      class="modal__close icon-button secondary"
      type="button"
      data-close-modal="true"
      aria-label="Close doctor details"
    >
      ✖️
    </button>
    <h3 id="viewDoctorTitle" class="modal__title m0">Doctor details</h3>
    <p class="modal__subtitle text-muted">
      View the saved information for this doctor.
    </p>
    <div class="modal__form modal__form--static" data-view-doctor>
      <label>
        <span>Full name</span>
        <input type="text" readonly data-doctor-field="name" />
      </label>
      <label class="modal__full">
        <span>Specialty</span>
        <textarea rows="2" readonly data-doctor-field="specialty"></textarea>
      </label>
      <div class="modal__actions modal__full">
        <button
          type="button"
          class="secondary"
          data-close-modal="true"
          data-focus-default
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
