<header class="header">
  <nav class="container">
    <ul>
      <li><strong class="brand brand-lg">ðŸ©º Health Jam</strong></li>
    </ul>

    <ul class="nav-right">
      <li><a href="/" class="{{active '/' path}}">Home</a></li>

      {{#if session.loggedIn}}
        <li class="dropdown nav-manage">
          <a
            href="/patients"
            class="{{activeMatch
                '^/(patients|doctors|appointments|accounts)($|/)'
                path
              }}"
          >
            Manage
          </a>
          <ul class="menu">
            <li><a
                href="/patients"
                class="{{active '/patients' path}}"
              >Patients</a></li>
            <li><a
                href="/doctors"
                class="{{active '/doctors' path}}"
              >Doctors</a></li>
            <li><a
                href="/appointments"
                class="{{active '/appointments' path}}"
              >Appointments</a></li>

            {{! Only admins see Accounts }}
            {{#if session.is_admin}}
              <li><hr
                  style="border:none;border-top:1px solid var(--line);margin:.35rem 0;"
                /></li>
              <li><a
                  href="/accounts"
                  class="{{active '/accounts' path}}"
                >Accounts</a></li>
            {{/if}}
          </ul>
        </li>
      {{/if}}

      <li><a href="/about" class="{{active '/about' path}}">About</a></li>
      <li><a href="/contact" class="{{active '/contact' path}}">Contact</a></li>

      {{#if session.loggedIn}}
        <li>|</li>
        <li><span class="hi">Hi, {{session.username}}</span></li>
        <li><a href="/logout" class="secondary">Logout</a></li>
      {{else}}
        <li>|</li>
        <li><a href="/login" class="{{active '/login' path}}">Login</a></li>
      {{/if}}
    </ul>
  </nav>
</header>
