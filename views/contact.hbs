<section class="panel">
  <h2 class="m0">Contact</h2>
  <form method="POST" action="/contact" class="mt1">
    <div class="grid two">
      <label>Name <input type="text" name="name" required /></label>
      <label>Email <input type="email" name="email" required /></label>
    </div>
    <label>Message
      <textarea name="message" rows="5" required></textarea></label>
    <button type="submit" class="mt1">Send</button>
  </form>
</section>