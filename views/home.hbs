<section class="hero">
  <div class="hero__text">
    <h1 class="hero__title">Run your clinic with confidence</h1>
    <p class="hero__subtitle">
      Health Jam centralizes patient, doctor rosters, and appointments so your
      team can focus on care not paperwork.
    </p>
    <div class="hero__actions">
      <a href="/patients" role="button">Manage patients</a>
      <a href="/appointments" role="button" class="secondary">Schedule visits</a>
    </div>
  </div>
  <div class="hero__metrics">
    {{#each stats}}
      <div class="hero__metric">
        <strong>{{this.value}}</strong>
        <span>{{this.label}}</span>
      </div>
    {{/each}}
  </div>
</section>

